# REST API Broker Environment Variables

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds
RATE_LIMIT_MAX=100        # Max requests per window

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Connection Mode
USE_UNIX_SOCKETS=false  # Set to true for Unix socket communication
# AGENT_SOCK_DIR=/var/run/llpm  # Directory for Unix sockets

# LiteLLM Proxy (optional)
LITELLM_PROXY_URL=http://litellm-proxy:4000

# Authentication (optional)
AUTH_ENABLED=false
# AUTH_TOKEN=your-secret-token

# Agent Configuration (optional)
# CLAUDE_CODE_URL=http://claude-code:8080
# OPENAI_CODEX_URL=http://openai-codex:8080
# AIDER_URL=http://aider:8080
# OPENCODE_URL=http://opencode:8080